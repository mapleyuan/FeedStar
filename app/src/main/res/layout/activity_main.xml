<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee">

    <RelativeLayout
        android:id="@+id/socially_main_top_id"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@color/yellow"
        >

        <com.maple.yuanweinan.feedstar.view.SimpleImageView
            android:id="@+id/fs_search_id"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="17dp"
            android:src="@drawable/fs_search_btn" />
    </RelativeLayout>

    <ListView
        android:id="@+id/feedstar_detail_list_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:listSelector="@null"
        android:divider="#e7e7e7"
        android:dividerHeight="1dp"
        ></ListView>

    <GridView
        android:layout_below="@+id/socially_main_top_id"
        android:id="@+id/grid_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:verticalSpacing="8dp"
        android:horizontalSpacing="8dp"
        android:numColumns="@integer/grid_column_count"
    />

    <com.maple.yuanweinan.feedstar.DetailWebView
        android:id="@+id/feedstar_detail_webview_id"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <WebView
            android:id="@+id/webview_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.maple.yuanweinan.feedstar.DetailWebView>
</RelativeLayout>